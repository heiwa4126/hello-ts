{
	"compilerOptions": {
		"target": "ES2018",
		"module": "ESNext",
		"lib": ["ES2018", "DOM"],
		"moduleResolution": "node",
		"esModuleInterop": false,
		"sourceMap": false,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"baseUrl": "./src"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
