{
	"name": "@heiwa4126/hello-ts",
	"version": "1.0.0",
	"main": "dist/index.js",
	"type": "commonjs",
	"bin": {
		"hello-ts": "dist/cli.js"
	},
	"engines": {
		"node": ">=16"
	},
	"keywords": ["demo", "typescript", "helloworld"],
	"author": "heiwa4126",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/heiwa4126/hello-ts.git"
	},
	"bugs": {
		"url": "https://github.com/heiwa4126/hello-ts/issues"
	},
	"homepage": "https://github.com/heiwa4126/hello-ts#readme",
	"license": "MIT",
	"description": "TypeScript package tutorial",
	"files": [
		"package.json",
		"README.md",
		"LICENSE",
		"dist/",
		"!**/__tests__",
		"!**/*.test.*",
		"!**/*.js.map"
	],
	"ignore": ["**/.DS_Store", "temp/"],
	"devDependencies": {
		"@types/jest": "^29.5.12",
		"@types/node": "^20.14.9",
		"@biomejs/biome": "1.8.2",
		"jest": "^29.7.0",
		"npm-package-json-lint": "^8.0.0",
		"typescript": "^5.5.2"
	},
	"scripts": {
		"linklocal": "bin/linklocal.sh",
		"watch": "tsc -w",
		"ex1": "node examples/ex1.cjs",
		"ex2": "node examples/ex2.mjs",
		"test": "jest",
		"lint": "biome lint ./src",
		"lint:package": "npmPkgJsonLint .",
		"format": "biome format --write ./src package.json",
		"build": "rm -rf dist && tsc -p tsconfig-prod.json",
		"pack": "npm run format && npm run build && npm pack && mv *.tgz ../"
	}
}
