{
	"name": "@heiwa4126/hello-ts",
	"version": "1.0.0",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/esm/index.d.ts",
	"type": "commonjs",
	"bin": {
		"hello-ts": "dist/cjs/cli.js"
	},
	"engines": {
		"node": ">=16"
	},
	"keywords": ["demo", "typescript", "helloworld"],
	"author": "heiwa4126",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/heiwa4126/hello-ts.git"
	},
	"bugs": {
		"url": "https://github.com/heiwa4126/hello-ts/issues"
	},
	"homepage": "https://github.com/heiwa4126/hello-ts#readme",
	"license": "MIT",
	"description": "TypeScript package tutorial",
	"files": [
		"package.json",
		"README.md",
		"LICENSE",
		"dist/esm",
		"dist/cjs",
		"!**/__tests__",
		"!**/*.test.*",
		"!**/*.js.map"
	],
	"ignore": ["**/.DS_Store", "temp/"],
	"devDependencies": {
		"@types/jest": "^29.5.12",
		"@types/node": "^22.5.2",
		"@biomejs/biome": "1.8.3",
		"jest": "^29.7.0",
		"npm-package-json-lint": "^8.0.0",
		"typescript": "^5.5.3"
	},
	"scripts": {
		"watch": "tsc -w",
		"ex0": "node ./dist/dev/cli.js",
		"test": "jest",
		"lint": "biome lint ./src",
		"lint:package": "npmPkgJsonLint .",
		"format": "biome format --write ./src package.json tsconfig*.json",
		"build:esm": "rm -rf dist/esm && tsc -p tsconfig.esm.json",
		"build:cjs": "rm -rf dist/cjs && tsc -p tsconfig.cjs.json",
		"build": "npm run build:esm && npm run build:cjs",
		"linklocal": "bin/linklocal.sh",
		"ex1": "node examples/ex1.cjs",
		"ex2": "node examples/ex2.mjs",
		"pack": "npm run format && npm run build && npm pack && mv *.tgz ../"
	}
}
