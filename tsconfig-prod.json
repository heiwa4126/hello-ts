{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "declaration": true,
    "removeComments": false, // Remove comments from the compiled output for production. JSDocも消える
    "noUnusedLocals": true, // Report error for unused local variables
    "noUnusedParameters": true, // Report error for unused function parameters
    "noImplicitReturns": true, // Report error for missing return statements on some code paths
    "noFallthroughCasesInSwitch": true // Report error for missing break statements in switch cases
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
